<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="bit_bag.sylius_blacklist_plugin.event_listener.fraud_suspicion" class="BitBag\SyliusBlacklistPlugin\EventListener\FraudSuspicionListener">
            <argument type="service" id="bit_bag.sylius_blacklist_plugin.resolver.suspicious_order" />
            <tag name="kernel.event_listener" event="bitbag_sylius_blacklist_plugin.fraud_suspicion.pre_create" method="processSuspicionOrder" />
        </service>
    </services>
</container>
