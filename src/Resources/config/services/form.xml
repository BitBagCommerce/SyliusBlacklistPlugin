<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="bitbag.sylius_blacklist_plugin.form.type.validation_groups" type="collection">
            <parameter>bitbag</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="bit_bag.sylius_blacklist_plugin.form.type.blacklisting_rule" class="BitBag\SyliusBlacklistPlugin\Form\Type\BlacklistingRuleType">
            <argument>%bitbag_sylius_blacklist_plugin.model.blacklisting_rule.class%</argument>
            <argument type="service" id="parameter_bag"/>
            <argument>%bitbag.sylius_blacklist_plugin.form.type.validation_groups%</argument>
            <tag name="form.type"/>
        </service>
        <service id="bit_bag.sylius_blacklist_plugin.form.type.fraud_suspicion_order" class="BitBag\SyliusBlacklistPlugin\Form\Type\FraudSuspicionOrderType">
            <argument>%bitbag_sylius_blacklist_plugin.model.fraud_suspicion.class%</argument>
            <argument>%bitbag.sylius_blacklist_plugin.form.type.validation_groups%</argument>
            <tag name="form.type"/>
        </service>
        <service id="bit_bag.sylius_blacklist_plugin.form.type.fraud_suspicion" class="BitBag\SyliusBlacklistPlugin\Form\Type\FraudSuspicionType">
            <argument>%bitbag_sylius_blacklist_plugin.model.fraud_suspicion.class%</argument>
            <argument>%bitbag.sylius_blacklist_plugin.form.type.validation_groups%</argument>
            <tag name="form.type"/>
        </service>
    </services>
</container>
